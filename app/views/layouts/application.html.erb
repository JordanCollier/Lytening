<!DOCTYPE html>
<html>
<head>
  <title>Lytening</title>
  <%= favicon_link_tag 'lytening_favicon.png' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
  <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
  <!-- <script type="text/javascript" src="TimeCircles.js"></script> -->
  <!-- <link href="TimeCircles.css" rel="stylesheet"> -->
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900italic,900' rel='stylesheet' type='text/css'>

</head>
<body>
  <div class="mobile">
    <input type="checkbox" id="toggle-menu" />
    <ul class="sidenav">
      <%= link_to(image_tag("lytening-logo-white.png", class:"sidenav-logo"), "#") %><hr>
      <li class="search-space">
        <form class="navbar-form navbar-left" role="search" action="/search_results">
          <input type="text" id="search-bar" placeholder="Find Your Friends" name="search">
          <input type="submit" value="SEARCH" class="search-btn"></input>
        </form>
      </li><hr>
      <% if user_signed_in? %>
        <li class="two-lines">Logged in as <br><strong><%= link_to current_user.email, user_path(current_user) %></strong></li><hr>
        <li class= "one-line"><%= link_to 'Edit profile', edit_user_registration_path%></li><hr>
        <li class= "one-line"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li><hr>
        <% else %>
        <li class= "one-line"><%= link_to "Login", new_user_session_path %></li><hr>
        <li class= "one-line"><%= link_to "Sign up", new_user_registration_path %></li><hr>
      <% end %>
    </ul>
      <nav>
        <div class="header">
          <ul>
            <% if current_user%>
              <li class="col-4-12"><%= link_to(image_tag("lytening-logo-black.png"), root_path) %></li>
              <li class="col-4-12">
                <%= form_for current_user, {:url => user_strykes_path(current_user), method: :post } do |f| %>
                  <%= fields_for Stryke.new do |fs| %>
                    <%= fs.text_field :body, class: "header-post", id:"textarea" %>
                    <span id="textarea_feedback"></span>
                  <% end %>
                  <%= f.submit "Stryke", class:"header-post-btn" %>
                <% end %>
              </li>
              <li class="col-4-12"><label for="toggle-menu"><%= image_tag "menu-icon.png", class:"menu" %></label></li>
            <% else %>
              <li class="col-6-12"><%= link_to(image_tag("lytening-logo-black.png"), root_path) %></li>
              <li class="col-6-12"><label for="toggle-menu"><%= image_tag "menu-icon.png", class:"menu" %></label></li>
            <% end %>

          </ul>
        </div>
      </nav>
      <section>
  <div class="alert-box">
    <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
    <% end %>
  </div>

<%= yield %>
    <footer class="col-12-12">
      <div class="foot">
        <ul class="col-12-12">
          <!-- <li><label for="toggle-menu"><%= image_tag "menu-icon.png", class:"menu" %></label></li> -->
        </ul>
      </div>
    </footer>

</section>

</div>


</body>
</html>
