
<div class="col-12-12">
  <div class="sign-container">
    <div class="sign-box">
      <%= link_to(image_tag("lytening-logo-white.png", class:"sign-logo"), "#") %>
      <div class="sign-log">

    <div class="sign-header">LOG IN</div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <!-- <div class="sign-header">EMAIL</div> -->
        <%= f.input :email, label: false, required: false, autofocus: true, placeholder: "Email"  %>
        <!-- <div class="sign-header">PASSWORD</div> -->
        <%= f.input :password, label: false, required: false, placeholder: "Password"  %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class:"login-submit" %>
      </div>
    <% end %>
    <div class="sign-up">
      <%= render "devise/shared/links" %>
    </div>
    </div>

    </div>

  </div>

</div>
