<div class="status-container">
<!-- Hot Strykes -->
  <div class="col-6-12">
    <div class="top">
      <% @strykes_hot_recent.each do |stryke| %>
      <div class="top-status">
        <h2><%= image_tag "#{stryke.user.avatar}", class: 'thumb' %> <%= link_to "#{stryke.user.full_name.upcase}", user_path(stryke.user), class:"spark-header" %></h2>
        <div class="countdown" data-timer="86400"></div>
        <p>
          <%= "#{stryke.body}" %>
        </p>
        <div class="sparks">

          <ul>
            <li><%= image_tag "spark-icon-white.png", class:"spark-icon" %></li>
            <li><strong><%= "#{stryke.spark_count}" %></strong></li>
            <li>sparks</li>
          </ul>

        </div>

        <div class="comments">
          <div class="header"><%= "#{stryke.comments.count}" %> comments</div>
            <div class='content'>
              <ul>
                <% stryke.comments.each do |comment| %>
                <li><%= render partial: "comment", locals: {comment: comment} %></li>
                <% end %>
              </ul>
              <!-- Comment form -->
              <div class="form">
                <%= simple_form_for([stryke, @comment]) do |f| %>
                  <%= f.hidden_field :title, :value => stryke.id %>
                  <%= f.text_field :body %>
                  <%= f.button :submit , id: "hot-comment", value: "Enter" %>
                <% end %>
              </div>
            </div>
        </div>

      </div>

      <% end %>
    </div>
  </div>

<!-- New Strykes -->
  <div class="col-6-12">
    <div class="new">
      <% @strykes_new_recent.each do |stryke| %>
      <div class="new-status">

        <h2><%= image_tag "#{stryke.user.avatar}", class: 'thumb' %> <%= link_to "#{stryke.user.full_name.upcase}", user_path(stryke.user), class:"spark-header" %></h2>
        <p>
          <%= "#{stryke.body}" %>
        </p>
        <div class="sparks">

          <ul>
            <li><%= image_tag "spark_icon.png", class:"spark-icon" %></li>
            <li><strong><%= "#{stryke.spark_count}" %></strong></li>
            <li>sparks</li>
          </ul>

        </div>

        <div class="comments">
          <div class="header"><%= "#{stryke.comments.count}" %> comments</div>
          <div class='content'>
            <ul>
            <% stryke.comments.each do |comment| %>
              <h6><%= image_tag "#{comment.user.avatar}", class: 'thumb' %> <%= link_to "#{comment.user.full_name}", user_path(comment.user), class:"spark-header" %></h6>
              <p><%= comment.body %></p>
              <div class="sparks">
                <ul>
                  <li><%= image_tag "spark-icon-white.png", class:"spark-icon" %></li>
                  <li><strong><%= comment.spark_count %></strong></li>
                  <li>sparks</li>
                </ul>
              </div>
            </ul>
            <% end %>
            <!-- Comment form -->
            <div class="form">
              <%= simple_form_for([stryke, @comment]) do |f| %>
                <%= f.text_field :body %>
                <%= f.button :submit, id: "fresh-comment", value: "Enter" %>
              <% end %>
            </div>

          </div>
        </div>

      </div>

      <% end %>

    </div>
  </div>

</div>


