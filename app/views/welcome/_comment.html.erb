<div class="col-12-12 comment">
  <div class="col-12-12 comment-box">
    <p>
      <div class="comment-thumb">
        <%= image_tag "#{comment.user.avatar}", class: 'thumb' %>
      </div>
      <%= link_to "#{comment.user.full_name.upcase}", user_path(comment.user), class:"comment-header"%>
      <%= comment.body_html %>
    </p>
    <% if current_user == comment.user %>
      <p><%= link_to "Delete", comment_path(comment), method: :delete, class:"comment-header" %></p>
    <% end %>
    <div class="comment-sparks">
      <%= render partial: 'sparks/spark', locals: {
        sparkable: comment,
        active_img: 'spark-icon-teal.png',
        inactive_img: 'spark-icon-teal.png',
      } %>
    </div>
  </div>
</div>
<hr class="comment-split"></hr>
